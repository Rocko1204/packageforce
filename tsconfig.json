{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "dist",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/types": ["src/types"],
            "@/providers": ["src/providers"],
            "@/commands": ["src/commands"],
            "@/utils": ["src/utils"],
            "@/services": ["src/services"]
        }
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "dist",
        "scratchorg",
        "out",
        "example-apex-files",
        "example-metadata"
    ]
}
